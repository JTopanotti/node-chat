<% include ../header %>
<header>
    <h2>Node-chat</h2>
</header>
<section>
    <form action='/contato' method='post'>
        <input type="text" name="contato[nome]" placeholder="Nome" value="carlos">
        <input type="text" name="contato[email]" placeholder="Email" value="carlos@notemail.com">
        <button type="submit">Cadastrar</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            <% contatos.forEach(function(contato, index) { %>
                <tr>
                    <td><%- contato.nome %></td>
                    <td><%- contato.email %></td>
                    <td>
                        <a href="/contato/<%- index %>">Detalhes</a>
                        <a href="/chat/<%- contato.email %>"
                           id="chat_<%- contato.email %>">
                           Conversar
                        </a>
                    </td>
                </tr>
            <% }) %> 
        </tbody>
    </table>    
</section>
<% include notify_script %>
<% include ../exit %>
<% include ../footer %>